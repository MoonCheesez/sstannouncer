<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@id/feedFragment">
    <fragment
            android:id="@+id/feedFragment"
            android:name="com.sst.anouncements.feed.ui.FeedFragment"
            android:label="@string/app_name">
        <argument
                android:name="feedUrl"
                app:argType="string" />
        <action
                android:id="@+id/action_feedFragment_to_postFragment"
                app:destination="@id/postFragment"
                app:enterAnim="@anim/slide_in_right"
                app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left"
                app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/postFragment"
            android:name="com.sst.anouncements.feed.ui.PostFragment"
            android:label="@string/app_name" >
        <action
                android:id="@+id/action_postFragment_to_feedFragment"
                app:destination="@id/feedFragment"
                app:popUpTo="@id/feedFragment" />
        <argument
                android:name="post"
                app:argType="com.sst.anouncements.feed.model.Entry" />
    </fragment>
</navigation>